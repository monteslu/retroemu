    "lint": "eslint src/ bin/ index.js"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@kmamal/sdl": "^0.11.13",
    "@monteslu/chafa-wasm": "^0.4.0",
